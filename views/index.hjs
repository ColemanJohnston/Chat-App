<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <h1 id="Title" class="center">Chat</h1>
    
    <div id="chat-area"></div>
    <form id="messageForm" class="bottomOfPage center">
      <label>Enter Message</label>
      <div></div>
      <textarea id="message"></textarea>
      <br>
      <input type="submit" value="Send Message">
    </form>
    <div id="login-area" class="center">
      <form id="userForm">
        <label>Enter Username: </label>
        <input type="text" id="username" cols"=10" rows="1" class="noresize"></textarea>
        <br>
        <input type="submit" value="Set Username">
      </form>
    </div>
    <div>Logged in Users:</div>
    <div id="user-area"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function(event) { 
            //alert("hurrah");
            var socket = io.connect(); 
            
            var username;
            
            var $messageForm = $("#messageForm"); 
            var $message = $("#message"); 
            var $chat = $("#chat-area"); 
            var $users = $("#user-area");
            
            var $loginArea = $("#login-area");
            var $userForm = $("#userForm");
            var $username = $("#username");
            
            $chat.hide();
            $messageForm.hide();
            
            $messageForm.submit(function(e) {
                e.preventDefault(); 
                socket.emit('send message', $message.val()); 
                $message.val(''); 
                $("#chat-area").scrollTop($("#chat-area")[0].scrollHeight);
            }); 
            
            $userForm.submit(function(e) {
                e.preventDefault();
                username = $username.val().trim();
                $username.val('');
                socket.emit('add user', username);
                if (username) {
                  $loginArea.fadeOut();
                  $messageForm.show();
                  $chat.show();
                  $loginArea.off('click');
                }
            });
            
            socket.on('new message', function(data) {
              console.log("here!!!!"); 
              $chat.append('<div>' + data.username + ': ' + data.msg + '</div>'); 
            });
            
            socket.on('new user', function(data) {
              $users.append('<div id=' + data.username + '>' + data.username + '</div>');
            });
            
            socket.on('user left', function(data){
              $("#" + data.username).remove();
            });
            
        }); 
    </script>
  </body>
</html>
